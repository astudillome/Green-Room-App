<main class="grid gapTwoRem">
    <h2>Search Results for <span class="firstCap"><%= artist %></span></h2>

    <article class="grid gapTwoRem gridResponsive">
        <% for (i=0; i < discogs.length; i++) { %>
            <section>
                <img src= "<%=discogs[i].cover_image%>">

                <!-- Album Title: -->
                <p><%= discogs[i].title %><br>
                <!-- Release Year: -->
                <%= discogs[i].year %><br>
                <!-- Genre: -->
                <%= discogs[i].genre %></p>

                <form method="POST" action="/favorites">
                    <input hidden type= "text" name="artist_name" value="<%= artist %>">
                    <input hidden type= "text" name="album_title" value="<%= discogs[i].title %>">
                    <input hidden type= "text" name="master_id" value="<%= discogs[i].id %>">
                    <button class="" type="submit">&#9734 Favorite &#9734</button>
                </form>
            </section>
        <% } %>
    </article>
</main>